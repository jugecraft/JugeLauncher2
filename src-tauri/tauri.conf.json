{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JugeLauncher",
  "version": "0.1.0",
  "identifier": "com.jugelauncher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://jugecraft.github.io/JugeLauncher2/latest.json"
      ],
      "dialog": true,
      "pubkey": "DW/MzP4...PLACEHOLDER_PUBKEY.../8="
    }
  },
  "app": {
    "windows": [
      {
        "title": "JugeLauncher",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}